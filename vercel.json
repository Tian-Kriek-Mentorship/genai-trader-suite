{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },           // 1️⃣ serve real files & functions first
    { "src": "/api/(.*)", "dest": "/api/$1" }, // 2️⃣ keep serverless endpoints
    { "src": "/(.*)", "dest": "/dist/$1" }     // 3️⃣ everything else → dist
  ]
}
