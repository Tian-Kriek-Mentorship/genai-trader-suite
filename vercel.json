{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },           // serve any real files/functions first
    { "src": "/api/(.*)", "dest": "/api/$1" }, // keep serverless functions working
    { "src": "/(.*)", "dest": "/dist/$1" }     // everything else â†’ dist
  ]
}
